generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id             Int       @id   @default(autoincrement())
  username       String
  phone          String    @unique
  address        String?
  password       String
  role           String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  programs      program[]  
  devotees       devotees[] 

}

model program {
  id            Int       @id   @default(autoincrement())
  programname   String
  description   String
  date          DateTime  
  status        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  devotees      devotees[] 
  users         user[]
   
}

model devotees {
  id            Int       @id    @default(autoincrement())
  name          String    
  contribution  String    
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        Int?      
  programId     Int?    
  user          user?     @relation(fields: [userId], references: [id])
  program       program?  @relation(fields: [programId], references: [id])
}